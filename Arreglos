//METODO DE BURBUJA
void burbuja(int arr[], int Tama単oArreglo) { //reciebe el arreglo, y el tama単o del arreglo
    int k;
    for (int i = 1; i < Tama単oArreglo; i++){
        for (int j = 0; i < Tama単oArreglo-1; i++){
            if (a[j]>a[j+1]){
                k=a[j+1];
                a[j+1]=a[j];
                a[j] = k;
            }   
        }
    }
}


int main(){

    int arreglo[6];
    //int arreglo.sort();
    cout<<" ORDENARCACION "<<endl;
    for (int i = 0; i < 6; i++)
    {
        cout<<" Ingrese un numero: ",cin>>arreglo[i];
    }

    cout<<"\n Arreglo orden de burbuja "<<endl;
    burbuja(arreglo,6);
    for (int i = 0; i < 6; i++)
    {
        cout<<" "<<arreglo[i]<<"-";
    }

    cout<<"\t Elementos del arreglo: "<<endl;
    for (int i = 0; i < 6; i++)
    {
        cout<<" "<<arreglo[i]<<"-";
    }
    
    

