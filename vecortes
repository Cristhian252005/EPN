//programa para realizar la suma de dos vectores
#include <iostream>
using namespace std;
int main() {
    int vector1[4],vector2[4],suma[4],resta[4];
    cout<<"La suma de vectores"<<endl;
    for(int i=0; i<4;i++){
     cout<<"Ingrese el valor "<<i+1<<" del vector 1: "<<endl;
     cin>>vector1[i];
    }
    for(int i=0; i<4;i++){
     cout<<"Ingrese el valor "<<i+1<<" del vector 2: "<<endl;
     cin>>vector2[i];
    }
//Publicacion de lo vectores 
    cout<<"Vector1: ";
    for(int i=0; i<4;i++){
     cout<<vector1[i]<<" ";
    }
    cout<<"\nVector2: ";
    for(int i=0; i<4;i++){
     cout<<vector2[i]<<" ";
    }
//Suma de vectores
    cout<<"\nSuma: ";
    for(int i=0; i<4;i++){
    suma[i]=vector1[i]+vector2[i];
     cout<<suma[i]<<" ";
    }
    cout<<"\nResta: ";
    for(int i=0; i<4;i++){
    resta[i]=vector1[i]-vector2[i];
     cout<<resta[i]<<" ";
    }
    return 0;
}
