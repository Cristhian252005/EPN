//Programa para sumar matrices
//matriz [numero cantidad], [filas],[columanas]
#include <iostream>
using namespace std;
int main() {
    int matriz[2][3][3];
    int matrizsuma[3][3];
    for(int m=0;m<2;m++){
        for(int filas=0;filas<3;filas++){
         for(int columna=0;columna<3;columna++){
            cout<<"En la matriz "<<m+1<<endl;
            cout<<"Ingrese el dato de la fila: "<<filas+1<<" y de la columna "<<columna+1<<" :";
            cin>>matriz[m][filas][columna];
        }    
        }
    }
        for(int m=0;m<2;m++){
            cout<<"Matriz: "<<m+1<<"["<<endl;
        for(int filas=0;filas<3;filas++){
         for(int columna=0;columna<3;columna++){
            cout<<matriz[m][filas][columna]<<" ";
        } 
        cout<<endl;
        }
        cout<<"]"<<endl;
    }
    for(int m=0;m<1;m++){
            cout<<"Matriz Suma: "<<m+1<<"["<<endl;
        for(int filas=0;filas<3;filas++){
         for(int columna=0;columna<3;columna++){
            matrizsuma[filas][columna]=matriz[m][filas][columna]+matriz[m+1][filas][columna];
            cout<<matrizsuma[filas][columna]<<" ";
        } 
        cout<<endl;
        }
        cout<<"]"<<endl;
    }
    
    return 0;
}
