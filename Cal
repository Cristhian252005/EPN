    float num_1;
    float num_2;
    float suma;
 using namespace std;
int main() {
    cout<<"Bienvenido a una calculadora de variables"<<endl;
    cout<<"Ingrese el primer numero"<<endl;
    cin>>num_1;
    cout<<"Ingrese el segundo numero"<<endl;
    cin>>num_2;
    cout<<"Su resultado de:"<<num_1<<" + "<<num_2<<"\t=\t"<<num_1+num_2<<endl;
    cout<<"Su resultado de:"<<num_1<<" - "<<num_2<<"\t=\t"<<num_1-num_2<<endl;
    cout<<"Su resultado de:"<<num_1<<" * "<<num_2<<"\t=\t"<<num_1*num_2<<endl;
    cout<<"Su resultado de:"<<num_1<<" / "<<num_2<<"\t=\t"<<num_1/num_2<<endl;
    
    
    return 0;
}
