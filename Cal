    float num_1;
    float num_2;
    float suma;
 using namespace std;
int main() {
    cout<<"Bienvenido a una calculadora de variables"<<endl;
    cout<<"Ingrese el primer numero"<<endl;
    cin>>num_1;
    cout<<"Ingrese el segundo numero"<<endl;
    cin>>num_2;
    cout<<"Su resultado de:";
    cout<<num_1;
    cout<<" + ";
    cout<<num_2;
    suma = num_1+num_2;
    cout<<"\t=\t";
    cout<<suma<<endl;
    cout<<"Su resultado de:";
    cout<<num_1;
    cout<<" - ";
    cout<<num_2;
    suma = num_1+num_2;
    cout<<"\t=\t";
    cout<<num_1-num_2<<endl;
    cout<<"Su resultado de:";
    cout<<num_1;
    cout<<" * ";
    cout<<num_2;
    suma = num_1+num_2;
    cout<<"\t=\t";
    cout<<num_1*num_2<<endl;
    cout<<"Su resultado de:";
    cout<<num_1;
    cout<<" / ";
    cout<<num_2;
    suma = num_1+num_2;
    cout<<"\t=\t";
    cout<<num_1/num_2<<endl;
    
    
    return 0;
}
